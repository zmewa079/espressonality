<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>


<main>
<h1><%= title %> </h1>
  <div class="cafedetail">
    <h3>Name: <%= cafe.name %> </h3>
    <h3>Address: <%= cafe.address %> </h3>
    <h3>Website: <%= cafe.website %> </h3>
    <a href="/cafes/<%= cafe._id %>/edit">
    <button class='deetsBtn'>Edit</button>
    </a>
  </div>

<div class="reviews">
  <h2><u>Add Review</u></h2>
  <form action="/cafes/<%= cafe._id %>/reviews" method="POST">

<h3><label for="ambience-selector"></label>Ambience Level:</label>
<select name="ambience">id="ambience-selector">
  <option value="calm">Calm</option>
  <option value="moderate">Moderate</option>
  <option value="busy">Busy</option>
  <option value="noisy">Noisy</option>
  </select></h3>

<h3><label for="avgprice-selector"></label>Average Price:</label>
<select name="avgprice">id="avgprice-selector">
  <option value="1">1</option>
  <option value="2">2</option>
  <option value="3">3</option>
  <option value="4">4</option>
  <option value="5">5</option>
</select></h3>

<h3><label for="rating-selector"></label>Rating:</label>
  <select name="rating">id="rating-selector">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
    </select></h3>

    <h3>Recommendation: <input name="recommendation" type="text"></h3>

    <h3>Comments: <input name="comments" type="text"></h3>
    <button class="deetsBtn" type= "submit">Add Review</button>
  </div>
</form> 

<div class="reviews">
  <% if (cafe.reviews.length) { %>
    <% cafe.reviews.forEach((review)=> { %>
      <h3>Ambience Level: <%= review.ambience %></h3>
      <h3>Average Price: <%= review.avgprice %></h3>
      <h3>Rating: <%= review.rating %></h3> 
      <h3>Recommendation: <%= review.recommendation %></h3>
      <h3>Comments: <%= review.comments %></h3>   
      <h3>Review Added By: <%= review.addedBy.name %></h3>
      <form action="/cafes/<%= cafe._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
        <button class="deetsBtn">erase</button>
      </form>
    <% }) %>
    <% } else { %>
      <h3>No Reviews Yet</h3>
    <% } %>
    <h3><a href="/cafes">
      <button class="viewcatalogBtn">View Catalog</button></h3>
      </a>
  </div>
</main>




<%- include('../partials/footer') %>